CREATE DATABASE test;
use test;

-- Create Publisher_book
CREATE TABLE Publisher_book (
  Publisher_ID int NOT NULL AUTO_INCREMENT,
  Publisher VARCHAR(100),
  PRIMARY KEY (Publisher_ID)
);

-- Insert Publisher_book
INSERT INTO Publisher_book (Publisher) VALUES 
    ('Erevan'),('Zangak');
SELECT * FROM Publisher_book;


-- Create Auther_book
CREATE TABLE Auther_book (
    Auther_ID int NOT NULL AUTO_INCREMENT,
    `Name` VARCHAR(100),
	`Surname` VARCHAR(100),
    PRIMARY KEY (Auther_ID)
);

-- Insert Auther_book
INSERT INTO Auther_book (Auther) VALUES 
    ('Hovhanes', 'Tumanyan'),('Exishe', 'Charenc');
SELECT * FROM Auther_book;

-- Create Books
CREATE TABLE Books (
    ID int NOT NULL AUTO_INCREMENT,
    Title VARCHAR(100),
    Pubdata date,
    Auther_ID int NOT NULL ,
    Publisher_ID int NOT NULL,
    PRIMARY KEY (ID),
    CONSTRAINT Books_FK_Publisher_book FOREIGN KEY (Publisher_ID)  REFERENCES Publisher_book(Publisher_ID),
    CONSTRAINT Books_FK_Auther_book    FOREIGN KEY (Auther_ID)  REFERENCES Auther_book(Auther_ID)
);


-- Insert Books
INSERT INTO Books (Title,Pubdata,Auther_ID,Publisher_ID) VALUES
    ('Giqor','2022-06-01','1','1'),('Land of Fire','1986-03-01','2','2');
SELECT * FROM Books;


-- Create Subscribers
CREATE TABLE Subscribers (
  ID int NOT NULL AUTO_INCREMENT,
  Name VARCHAR(100),
  Surname VARCHAR(100),
  B_day DATE,
  Address VARCHAR(100),
  PRIMARY KEY (ID)
  );
  
-- Insert Subscribers
INSERT INTO Subscribers (Name,Surname,B_day,Address) VALUES
    ('Gagik','Babayan','2001-03-07','Ashot Grashi 31');
  SELECT * FROM Subscribers;

-- Create Subscribers_book
CREATE TABLE Subscribers_book (
  ID int NOT NULL AUTO_INCREMENT,
  Subscriber_ID int,
  Taken_date DATE,
  Returned_date DATE,
  Deadline DATE,
  PRIMARY KEY (ID),
  CONSTRAINT Subscribers_book_FK_Subscribers FOREIGN KEY (Subscriber_ID) REFERENCES Subscribers (ID)
  );

-- Create Subscribers_book
INSERT INTO Subscribers_book (Subscriber_ID,Taken_date,Returned_date,Deadline) VALUES
    ('1','2022-05-20','2022-05-31','2022-06-01');
  SELECT * FROM Subscribers_book;
  
-- Create Book_inventory  
CREATE TABLE Book_inventory (
  ID int NOT NULL AUTO_INCREMENT,
  Book_ID int,
  Sub_book_ID int,
  _Condition VARCHAR(100),
  Status VARCHAR(100),
  PRIMARY KEY (ID),
  CONSTRAINT Book_inventory_FK_Books FOREIGN KEY (Book_ID) REFERENCES Books (ID),
  CONSTRAINT Book_inventory_FK_Subscribers_book FOREIGN KEY (Sub_book_ID) REFERENCES Subscribers_book (ID)
  );
  
  DROP TABLE Publisher_book;
  DROP TABLE Book_inventory;
  DROP TABLE Subscribers_book;
  DROP TABLE Subscribers;
  DROP TABLE Auther_book;
  DROP TABLE Books;
  DROP DATABASE test;
